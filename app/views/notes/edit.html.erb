<section>
  <div class="mb-20 mt-20 w-full md:w-[80%] lg:w-[50%] mx-auto flex flex-col items-center justify-center gap-6 relative">
        <div class="relative hover:transform hover:-translate-y-4 transition-all duration-500 ease-in-out w-[90%] md:w-[80%]">
          <h1 class="text-4xl sm:text-5xl md:text-6xl lg:text-7xl font-700 mb-2 font-krona uppercase transition-all duration-500 ease-in-out transform hover:-translate-y-4 text-black text-center">
            Write everything <br>you like
          </h1>
        </div>
      </div>
    </div>
  <div class="flex flex-col items-center gap-5 w-full px-4 md:w-[80%] mx-auto">
    <%= form_with model: @note, local: true do |form| %>
      <div class="field flex flex-col gap-4 w-full">
        <div class="flex flex-col gap-4 mb-8">
          <strong class="text-lg font-semibold">Your enquiries:</strong>
          <div>
            <%= form.rich_text_area :content, placeholder: 'Edit your inquiries here!', class: "w-full sm:w-[80%] rounded-lg trix-editor trix-content p-3" %>
          </div>
        </div>
  
        <div class="field flex flex-col gap-4 w-full">
          <strong class="text-lg font-semibold">Hope you get what you want:</strong>
          <div class="trix-content border-4 border-custom-enhanced-border p-3 rounded-lg text-sm sm:text-base md:text-lg">
            <%= @note.enhanced_content %>
          </div>
        </div>
      </div>
  
      <div class="actions mt-5 flex gap-4">
        <%= form.submit 'Update', class: "inline-block px-6 py-3 text-sm sm:text-base md:text-lg text-black uppercase font-bold border-4 border-black-stroke rounded-2xl hover:bg-black hover:text-white no-underline" %>
        <%= link_to 'Back Home', notes_path, class: "inline-block px-6 py-3 text-sm sm:text-base md:text-lg text-black uppercase font-bold border-4 border-black-stroke rounded-2xl hover:bg-black hover:text-white no-underline" %>
      </div>
    <% end %>
  </div>
</section>
