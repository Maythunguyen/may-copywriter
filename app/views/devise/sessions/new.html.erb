<section class="flex flex-col items-center w-full px-4 sm:px-8 md:px-16 lg:px-24">
  <div class="flex flex-col items-center mb-12 mt-12 gap-3 w-full sm:w-[80%] md:w-[60%] lg:w-[40%] mx-auto">
    <h2 class="text-3xl font-700 mb-6 font-inter-tight transition-all duration-500 ease-in-out transform hover:-translate-y-2">Log in</h2>
  </div>

  <div class="w-full sm:w-[80%] md:w-[60%] lg:w-[40%] mx-auto">
    <%= form_for(resource, as: resource_name, url: session_path(resource_name), class: "w-full") do |f| %>
      <div class="mb-4 flex flex-col w-full">
        <%= f.label :email, class: "block text-lg font-semibold mb-2" %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "w-full p-3 border-4 border-black-stroke rounded-lg focus:border-custom-focus-color focus:outline-none"%>
      </div>

      <div class="field mb-4 flex flex-col w-full">
        <%= f.label :password, class: "block text-lg font-semibold mb-2" %>
        <%= f.password_field :password, autocomplete: "current-password", class: "w-full p-3 border-4 border-black-stroke rounded-lg focus:border-custom-focus-color focus:outline-none" %>
        <div class="mt-2">
          <%= link_to "Forgot your password?", new_password_path(resource_name), class: "text-sm text-custom-text hover:text-black" %>
        </div>
      </div>

      <% if devise_mapping.rememberable? %>
        <div class="mt-12 flex items-center justify-between w-full">
          <div class="flex items-center">
            <%= f.check_box :remember_me, class: "mr-2" %>
            <%= f.label :remember_me, class: "text-lg font-semibold" %>
          </div>
          <%= f.submit "Log in", class: "bg-white border-4 border-black-stroke text-black font-semibold rounded-xl px-6 py-3 hover:bg-black hover:text-white" %>
        </div>
      <% else %>
        <div class="actions mb-4 w-full flex justify-end">
          <%= f.submit "Log in", class: "bg-white border-4 border-black-stroke text-black font-semibold rounded-xl px-6 py-3 hover:bg-black hover:text-white" %>
        </div>
      <% end %>
    <% end %>
  </div>

  <div class="flex flex-col items-center mt-12">
    <p class="text-sm text-gray-600">Don't have an account? <%= link_to "Sign up", new_registration_path(resource_name), class: "text-custom-text hover:text-black" %></p>
  </div>
</section>
