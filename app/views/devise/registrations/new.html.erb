<section class="flex flex-col items-center w-full px-4 sm:px-8 md:px-16 lg:px-24">
  <div class="flex flex-col items-center mb-12 mt-12 gap-3 w-full sm:w-[80%] md:w-[60%] lg:w-[40%] mx-auto">
    <h2 class="text-3xl font-700 mb-6 font-inter-tight transition-all duration-500 ease-in-out transform hover:-translate-y-2">Sign up</h2>
  </div>

  <div class="w-full sm:w-[80%] md:w-[60%] lg:w-[40%] mx-auto">
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), class: "w-full") do |f| %>
      <% if resource.errors.any? %>
        <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded relative mb-6" role="alert">
          <p class="font-bold"><%= pluralize(resource.errors.count, "error") %> prohibited this <%= resource.class.name.downcase %> from being saved:</p>
          <ul>
            <% resource.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

      <div class="mb-4 flex flex-col w-full">
        <%= f.label :email, class: "block text-lg font-semibold mb-2" %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "w-full p-3 border-4 border-black-stroke rounded-lg focus:border-custom-focus-color focus:outline-none" %>
      </div>

      <div class="field mb-4 flex flex-col w-full">
        <%= f.label :password, class: "block text-lg font-semibold mb-2" %>
        <% if @minimum_password_length %>
          <em class="text-sm text-gray-600">(<%= @minimum_password_length %> characters minimum)</em>
        <% end %>
        <%= f.password_field :password, autocomplete: "new-password", class: "w-full p-3 bg-white border-4 border-black-stroke rounded-lg focus:border-custom-focus-color focus:outline-none" %>
      </div>

      <div class="field mb-4 flex flex-col w-full">
        <%= f.label :password_confirmation, class: "block text-lg font-semibold mb-2" %>
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "w-full p-3 bg-white border-4 border-black-stroke rounded-lg focus:border-custom-focus-color focus:outline-none" %>
      </div>

      <div class="actions mt-12 w-full flex justify-end">
        <%= f.submit "Sign up", class: "bg-white border-4 border-black-stroke text-black font-semibold rounded-xl px-6 py-3 hover:bg-black hover:text-white" %>
      </div>
    <% end %>
  </div>

  <div class="flex flex-col items-center mt-12">
    <p class="text-sm text-gray-600">Have an account? <%= link_to "Log in", new_session_path(resource_name), class: "text-custom-text hover:text-black" %></p>
  </div>
</section>
