<section>
  <div class="flex flex-col mb-12 mt-12 items-center gap-3 w-[30vw] mx-auto">
    <h2 class="text-3xl font-700 mb-6 font-inter-tight transition-all duration-500 ease-in-out transform hover:-translate-y-2">Change your password</h2>
  </div>

  <div class="w-[30vw] items-center mx-auto">
    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }, class: "w-full max-w-lg") do |f| %>
      <% if resource.errors.any? %>
        <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded relative mb-6" role="alert">
          <strong class="font-bold"><%= pluralize(resource.errors.count, "error") %> prohibited this <%= resource.class.name.downcase %> from being saved:</strong>
          <ul class="list-disc pl-5 mt-2">
            <% resource.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

      <%= f.hidden_field :reset_password_token %>

      <div class="mb-4 flex flex-col w-full">
        <%= f.label :password, "New password", class: "block text-lg font-semibold mb-2" %>
        <% if @minimum_password_length %>
          <em class="text-sm text-gray-600 mb-2">(<%= @minimum_password_length %> characters minimum)</em>
        <% end %>
        <%= f.password_field :password, autofocus: true, autocomplete: "new-password", class: "w-full p-3 border-2 border-custom-stroke rounded-lg focus:border-custom-focus-color focus:outline-none" %>
      </div>

      <div class="mb-4 flex flex-col w-full">
        <%= f.label :password_confirmation, "Confirm new password", class: "block text-lg font-semibold mb-2" %>
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "w-full p-3 border-2 border-custom-stroke rounded-lg focus:border-custom-focus-color focus:outline-none" %>
      </div>

      <div class="actions mt-12 w-full flex justify-end">
        <%= f.submit "Change my password", class: "w-full bg-custom-button text-black font-semibold rounded-xl px-6 py-3 hover:bg-black hover:text-white" %>
      </div>
    <% end %>
  </div>

  <div class="flex flex-col items-center mt-12">
    <p class="text-sm text-gray-600">Remember your password? <%= link_to "Log in", new_session_path(resource_name), class: "text-custom-text hover:text-black" %></p>
  </div>
</section>
