<section class="flex flex-col items-center w-full px-4 sm:px-8 md:px-16 lg:px-24">
  <div class="flex flex-col items-center mb-12 mt-12 gap-3 w-full sm:w-[80%] md:w-[60%] lg:w-[40%] mx-auto">
    <h2 class="text-3xl font-700 mb-6 font-inter-tight transition-all duration-500 ease-in-out transform hover:-translate-y-2">Forgot your password?</h2>
    <p>No worries, we'll send you reset instructions</p>
  </div>

  <div class="w-full sm:w-[80%] md:w-[60%] lg:w-[40%] mx-auto">
    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }, class: "w-full") do |f| %>
      <% if resource.errors.any? %>
        <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded relative mb-6" role="alert">
          <strong class="font-bold"><%= pluralize(resource.errors.count, "error") %> prohibited this <%= resource.class.name.downcase %> from being saved:</strong>
          <ul class="list-disc pl-5 mt-2">
            <% resource.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

      <div class="mb-4 flex flex-col w-full">
        <%= f.label :email, class: "block text-lg font-semibold mb-2" %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "w-full p-3 bg-white border-4 border-black-stroke rounded-lg focus:border-custom-focus-color focus:outline-none" %>
      </div>

      <div class="actions mt-6 w-full flex">
        <%= f.submit "Reset password", class: "w-full bg-custom-button text-black font-semibold rounded-xl px-6 py-3 hover:bg-black hover:text-white" %>
      </div>
    <% end %>
  </div>

  <div class="flex flex-col items-center mt-12">
    <p class="text-sm text-gray-600">Remember your password? <%= link_to "Log in", new_session_path(resource_name), class: "text-custom-text hover:text-black" %></p>
  </div>
</section>
