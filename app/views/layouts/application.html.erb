<!DOCTYPE html>
<html>
  <head>
    <title>May Notes</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= stylesheet_link_tag "tailwind", "inter-font", "data-turbo-track": "reload" %>
    <%= stylesheet_link_tag "tailwind", "data-turbo-track": "reload" %>
    <%= stylesheet_link_tag "tailwind", "inter-font", "data-turbo-track": "reload" %>
    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= javascript_importmap_tags %>
    <%= stylesheet_link_tag "tailwind", "inter-font", "data-turbo-track": "reload" %>
    <%= stylesheet_link_tag 'trix' %>
    <%= stylesheet_link_tag "tailwind", "inter-font", "data-turbo-track": "reload" %>
    <%= stylesheet_link_tag 'actiontext' %>

    <script src="https://cdnjs.cloudflare.com/ajax/libs/gsap/3.9.1/gsap.min.js"></script>
  </head>

  <body>
    <div class="logout-link">
        <% if user_signed_in? %>
          <div class="fixed top-4 right-4 sm:top-5 sm:right-5 md:top-8 md:right-8 lg:top-10 lg:right-10 z-50">
            <%= link_to 'Logout', destroy_user_session_path, method: :delete, class: "inline-block px-4 py-2 sm:px-5 sm:py-2 md:px-6 md:py-3 bg-white text-black border-2 border-black-stroke font-semibold rounded-xl hover:bg-custom-button no-underline" %>
          </div>
        <% end %>
    </div>
    <%= yield %>
    <%= javascript_include_tag "gsap_animation" %>
    <%= javascript_include_tag "modal" %>
  </body>
</html>

